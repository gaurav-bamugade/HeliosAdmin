<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="3dp"
    android:id="@+id/prod_item_card"
    app:contentPadding="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:id="@+id/item_name_update_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/party_rc_partyname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="gaurav"
                                android:textColor="@color/black"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/party_rc_updateTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Update Time"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>


                    </RelativeLayout>
                    <TextView
                        android:id="@+id/party_rc_purchase_sales"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:text="P2"
                        >

                    </TextView>
                    <LinearLayout
                        android:layout_weight="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/party_rc_pay_receive"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="to receive"
                            android:textAlignment="textEnd"
                            android:paddingEnd="5dp"
                            android:textSize="11sp"
                            android:textColor="@color/black"
                            tools:ignore="NestedWeights">

                        </TextView>
                        <TextView
                            android:id="@+id/party_rc_pay_receive_amount"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="0"
                            android:textSize="11sp"
                            android:drawableLeft="@drawable/rupee"
                            >
                        </TextView>
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_below="@+id/item_name_update_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_alignParentStart="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        >
                        <TextView

                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Items"
                            >
                        </TextView>
                        <TextView
                            android:id="@+id/product_rc_stock_in"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            >
                        </TextView>




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        >
                        <TextView
                            android:id="@+id/party_rc_itemname"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="pant"
                            >
                        </TextView>
                        <TextView
                            android:id="@+id/product_rc_stock_out"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            >
                        </TextView>

                        <TextView
                            android:id="@+id/product_rc_start_stock"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Amount"

                            >
                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        >
                        <TextView
                            android:layout_weight="1.5"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity x Price"
                            >
                        </TextView>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            >
                            <TextView
                                android:layout_weight="1.5"
                                android:id="@+id/party_rc_quantity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textSize="11sp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_marginEnd="4dp"
                                android:textColor="@color/black"
                                >

                            </TextView>
                            <TextView
                                android:layout_weight="1.5"
                                android:id="@+id/party_rc_quantity_unittype"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="pieces"
                                android:textSize="11sp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:layout_marginEnd="4dp"
                                android:textColor="@color/black"
                                >

                            </TextView>
                            <TextView
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="X"
                                android:textSize="11sp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                >

                            </TextView>
                            <TextView
                                android:layout_weight="1.5"
                                android:id="@+id/party_rc_purchase_sales_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="178"

                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                android:drawableLeft="@drawable/rupee"
                                >

                            </TextView>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/party_rc_totalAmount"
                            android:layout_weight="1.5"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3560"
                            android:layout_gravity="center"

                            android:drawableLeft="@drawable/rupee"
                            >
                        </TextView>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Amount"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        >

                    </TextView>
                    <TextView
                        android:id="@+id/totalM"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7500"
                        android:textColor="@color/colorBlue"
                        android:textSize="12sp"
                        android:drawableLeft="@drawable/rupee"

                        >

                    </TextView>
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>





    </RelativeLayout>

</androidx.cardview.widget.CardView>